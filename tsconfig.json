{
  "compilerOptions": {
    "target": "ESNext", // Para que o TypeScript use os recursos mais recentes do ECMAScript
    "module": "ESNext", // Use módulos ES6 no TypeScript (import/export)
    "moduleResolution": "node", // Resolva módulos como no Node.js
    "outDir": "./dist", // Diretório de saída para os arquivos compilados
    "rootDir": "./src", // Diretório de origem dos arquivos TypeScript
    "strict": true, // Ativa verificações rigorosas de tipo
    "esModuleInterop": true, // Permite importar módulos CommonJS com a sintaxe de importação ES6
    "skipLibCheck": true, // Ignora verificações de tipo em bibliotecas
    "resolveJsonModule": true, // Permite importar módulos JSON
    "forceConsistentCasingInFileNames": true, // Garante que as importações de arquivos sigam a mesma capitalização
    "baseUrl": ".", // Define o caminho base para a resolução de módulos
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ] // Configurações adicionais para resolver módulos
    },
    // "typeRoots": ["./node_modules/@types", "./src"],
    // "types": ["node", "fastify"]
  },
  "include": [
    "src/**/*.ts" // Inclui todos os arquivos TypeScript da pasta src
  ],
  "exclude": [
    "node_modules" // Exclui a pasta node_modules
  ]
}