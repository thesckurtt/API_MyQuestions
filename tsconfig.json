{
  "compilerOptions": {
    "target": "ES2022", // Define o nível do ECMAScript
    "module": "ES2022", // Para rodar no Node.js
    "moduleResolution": "node", // Altere para 'node' para suportar módulos JSON
    "outDir": "./dist", // Pasta de saída dos arquivos compilados
    "rootDir": "./src", // Pasta onde ficam os arquivos TypeScript
    "strict": true, // Habilita verificações rigorosas de tipos
    "esModuleInterop": true, // Habilita a interoperabilidade com módulos ES
    "skipLibCheck": true, // Ignora checagem de tipos em bibliotecas
    "resolveJsonModule": true // Permite importar arquivos JSON
  },
  "include": [
    "src/**/*.ts"
  ], // Inclui todos os arquivos TypeScript da pasta src
  "exclude": [
    "node_modules"
  ] // Exclui a pasta node_modules
}